{
  "name": "verge-wallet",
  "version": "0.1.1",
  "description": "Verge the privacy coin of the future.",
  "author": "VERGE Currency Team <contact@vergecurrency.com>",
  "build": {
    "appId": "org.verge.electronwallet",
    "productName": "Verge",
    "files": [
      "dist/",
      "main.js",
      "package.json",
      "build/icon.icns",
      "build/icon.ico"
    ],
    "extraResources": [
      "build/tor/"
    ],
    "dmg": {
      "title": "Verge",
      "background": "build/background.png",
      "icon": "build/VolumeIcon.icns",
      "iconSize": 120,
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "mac": {
      "category": "public.app-category.finance",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vergecurrency/vWallet.git"
  },
  "license": "MIT",
  "main": "main.js",
  "scripts": {
    "preinstall": "git submodule update --init && cd bitcore/packages/bitcore-lib && npm install && cd ../bitcore-mnemonic && npm install && cd ../bitcore-stealth && npm install && cd ../bitcore-lib-cash && npm install && cd ../bitcore-wallet-client && npm install",
    "postinstall": "electron-builder install-app-deps",
    "dist": "yarn clean && yarn run build && electron-builder",
    "publishDist": "yarn clean && yarn run build && electron-builder -p always",
    "test": "jest --watch",
    "test-ci": "jest --ci --runInBand --reporters=default --reporters=jest-junit",
    "prod": "cross-env NODE_ENV=prod webpack --config webpack.build.config.js --mode production && electron --noDevServer .",
    "dev": "cross-env NODE_ENV=dev webpack-dev-server --progress --hide-modules --hot --host 0.0.0.0 --config ./webpack.dev.config.js",
    "build": "cross-env NODE_ENV=prod webpack --mode production --config=./webpack.build.config.js",
    "package": "webpack --mode production --config webpack.build.config.js",
    "postpackage": "electron-packager ./ --all --out=./builds --overwrite",
    "prettify": "prettier --config .prettierrc.js --write src/**/*.{ts,tsx,json}",
    "prettify-check": "prettier --list-different --config=.prettierrc.js src/**/*.{ts,tsx,json}",
    "eslintfixdry": "eslint --fix-dry-run src/**/*.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/winston": "^2.4.4",
    "bip32": "^2.0.3",
    "bip39": "^3.0.2",
    "bootstrap": "^4.1.0",
    "bs58": "^4.0.1",
    "chart.js": "^2.7.2",
    "electron-react-titlebar": "^0.8.1",
    "electron-store": "^1.3.0",
