    "i18next-browser-languagedetector": "^2.2.0",
    "invariant": "^2.2.4",
    "loglevel": "^1.6.1",
    "mobx": "^4.2.0",
    "mobx-react": "^5.0.0",
    "moment": "^2.22.1",
    "qrcode.react": "^0.8.0",
    "react": "^16.2.0",
    "react-animations": "^1.0.0",
    "react-avatar": "^3.4.6",
    "react-chartjs-2": "^2.7.2",
    "react-dom": "^16.2.0",
    "react-i18next": "^7.8.1",
    "react-material-icon-svg": "^3.0.0",
    "react-moment": "^0.7.0",
    "react-popover": "^0.5.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2",
    "reactstrap": "^5.0.0-beta.3",
    "request": "^2.88.0",
    "request-progress": "^3.0.0",
    "socks-proxy-agent": "4.0.1",
    "styled-components": "^3.3.2",
    "tor-request": "^2.1.1",
    "uuid": "^3.2.1",
    "verge-node-typescript": "0.0.17",
    "verge-wallet-client": "file:./bitcore/packages/bitcore-wallet-client",
